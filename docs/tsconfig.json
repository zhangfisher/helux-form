{
  "compilerOptions": {
    "strict": true,
    "declaration": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "jsx": "react",
    "resolveJsonModule": true,
    "baseUrl": "./",
    "paths": {
      "@@/*": [".dumi/tmp/*"],
      "speedform-docs": ["src"],
      "speedform-docs/*": ["src/*", "*"],
      "@speedform/core": ["node_modules/speed-form/src"],
      "@speedform/reactive": ["node_modules/speed-form/src"]
    }
  },
  "include": [
    ".dumirc.ts",
    "src/**/*",
    "node_modules/speed-form/src/**/*",
    "node_modules/@speedform/reactive/src/**/*",
    "node_modules/@speedform/core/src/**/*",

  ]
}
